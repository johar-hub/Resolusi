      let kali = a * b * c;
      let pembagian = a / b / c;
      console.info(tambah);
      console.info(`Hasil Perkalian ${a}*${b}*${c}= ${kali}`);
      console.info(`Hasil Pembagian ${a}:${b}:${c}= ${pembagian}`);

